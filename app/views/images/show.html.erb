<div align="center" class="p-4">
  <img class="p-4" src="<%= @image.link %>"/>
  <div class="col-md-4">
    <% @image.tag_list.each do |tag| %>
      <span> <%= link_to tag, images_path(tag: tag) %> </span>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= button_to "Delete Image", { action: "destroy", id: @image.id }, method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </div>
</div>
